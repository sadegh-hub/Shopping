@using PagedList.Mvc;
@using PagedList;



@model PagedList.PagedList<Shapping.Models.Productkala>
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    ViewBag.Title = "Admin";
}

<h2 dir="rtl">صفحه مدیریت سایت</h2>

<a href="@Url.Action("Create","ProductKalas")" class="Product-link btn btn-danger">محصول جدید</a>

<hr />
<hr />

<div class="row">
    <div class="col-sm-8">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="box col-sm-4 ">
                    <div class=" front">
                        <img src=@item.Image alt=@item.Name>
                    </div>
                    <div class="back">
                        <h5 dir="rtl">@item.Name</h5>
                        <h6 dir="rtl">@item.Discription</h6>
                        <p dir="rtl">@item.Price تومان</p>
                        <a href="@Url.Action("Details","Productkalas",new {Groupkalas=item.Subgroupkala.IDGroup,Subgroupkalas=item.IDSubGroup,item.ID,productname=item.Name.Replace(" ","-") })" class="Product-link btn btn-warning"> جزییات</a><br />
                        <a href="@Url.Action("Delete","Productkalas",new {Groupkalas=item.Subgroupkala.IDGroup,Subgroupkalas=item.IDSubGroup,item.ID,productname=item.Name.Replace(" ","-") })" class="Product-link btn btn-danger"> حذف</a><br />
                        <a href="@Url.Action("Edit","Productkalas",new {Groupkalas=item.Subgroupkala.IDGroup,Subgroupkalas=item.IDSubGroup,item.ID,productname=item.Name.Replace(" ","-") })" class="Product-link btn btn-primary"> ویرایش</a><br />
                    </div>


                </div>

            }

        </div>

        <div class="row">
            <div class="col-sm-12">
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
            </div>
        </div>

    </div>

    <div class="col-sm-4">
        <div class="row" dir="rtl">
            <div class="col-sm-12 filter-style">
                <!-- Single button -->
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        مرتب کردن بر اساس قیمت <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index","Productkalas",new {sortoption="1" })">صعودی</a></li>
                        <li><a href="@Url.Action("Index","Productkalas",new {sortoption="2" })">نزولی</a></li>

                    </ul>
                </div>
                <hr />
                <div class="row" dir="rtl">
                    <div class="col-sm-12">
                        <form action="~/Productkalas/Index/ " method="get">
                            <label>کمترین قیمت</label>
                            <br />
                            <input type="text" name="minprice" />
                            <br />
                            <hr />
                            <label>بیشترین قیمت</label>
                            <br />
                            <input type="text" name="maxprice" />
                            <br />
                            <br />
                            <input type="submit" value="جستجو" class="btn btn-info" />
                        </form>
                    </div>

                </div>

            </div>


        </div>

    </div>
</div>

